<div class="col-xs-12">
  <div class="page-header text-center">
    <h1>Projects / Websites</h1>
  </div>
</div>

<div class="col-xs-12">
  <div>
    <ul class="list-group">
      <% @projects.each do |project| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <li class="list-item-group project">
            <figure class="hover">
              <%= image_tag("linkedin-icon.png", alt: project.title) %>
              <figcaption>
                <h3>
                  <%= link_to project.url, project.title, target: "_blank" %> 
                  <small class="project-links">
                    ( <%= link_to "Live", project.url %> | <%= link_to "Source", project.source_url %> )
                  </small>
                </h3>
                    <span class="project-description"><%= project.description %></span>
                    <a href="#" class="close-caption hidden">x</a>
                </figcaption>
            </figure>
          </li>
        </div>
      <% end %>
      
      <div class="col-xs-12 col-sm-6 col-md-4">
        <li>
          <%= link_to "www.Clark-Travel.com", "http://www.clark-travel.com", target: "_blank" %>
        </li>
      </div>
      
      <div class="col-xs-12 col-sm-6 col-md-4">
        <li>
          <%= link_to "www.BranchburgDoctors.com", "http://www.BranchburgDoctors.com", target: "_blank" %>
        </li>
      </div>
      
      <div class="col-xs-12 col-sm-6 col-md-4">
        <li>
          <%= link_to "www.PreventITHealth.com", "http://www.clark-travel.com", target: "_blank" %>
        </li>
      </div>
     
    </ul>
  </div>
</div>

<div class="col-xs-12">
  <% if current_user_is_admin? %>
    <div class="col-xs-12">
      <table>
        <thead>
          <tr>
            <th>Title,</th>
            <th>Url</th>
            <th>Description</th>
            <th>Ord</th>
            <th>Display</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @projects.each do |project| %>
            <tr>
              <td><%= project.title %></td>
              <td><%= project.url %></td>
              <td><%= project.description %></td>
              <td><%= project.ord %></td>
              <td><%= project.display %></td>
              <td><%= link_to 'Show', project %></td>
              <td><%= link_to 'Edit', edit_project_path(project) %></td>
              <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      

      <p><%= link_to 'New Project', new_project_path if current_user_is_admin? %></p>
      
    </div>
  <% end %>
</div>
